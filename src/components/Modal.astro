<div
  id="modal"
  class="absolute inset-0 min-h-[157vh] bg-black bg-opacity-50 backdrop-blur-sm flex hidden items-start justify-center"
>
  <div
    class="bg-darkGray bg-opacity-80 p-8 rounded-lg shadow-xl max-w-[300px] max-h-auto overflow-y-hidden mt-32 border border-darkGray"
  >
    <h2 class="text-2xl font-bold mb-4 text-white text-center">
      Agregar Nuevo Artista
    </h2>
    <form id="newArtistForm" class="space-y-4">
      <div>
        <label for="name" class="block text-sm font-medium text-white"
          >Nombre</label
        >
        <input
          type="text"
          id="name"
          name="name"
          class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 px-3 py-2 text-gray-700 placeholder-gray-400 shadow-sm transition duration-150 ease-in-out hover:border-[#1DB954] hover:ring-1 hover:ring-[#1DB954]"
          placeholder="Ingrese el nombre del artista"
        />
      </div>
      <div>
        <label for="genre" class="block text-sm font-medium text-white"
          >Género</label
        >
        <input
          type="text"
          id="genre"
          name="genre"
          class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-accent focus:bg-white focus:ring-0 px-3 py-2 text-gray-700 placeholder-gray-400 shadow-sm transition duration-150 ease-in-out hover:border-accent hover:ring-1 hover:ring-accent"
          placeholder="Ingrese el género musical"
        />
      </div>
      <div>
        <label
          for="profileImageUrl"
          class="block text-sm font-medium text-white">URL de Imagen</label
        >
        <input
          type="url"
          id="profileImageUrl"
          name="profileImageUrl"
          class="mt-1 block w-full rounded-md bg-gray-100 border-transparent focus:border-accent focus:bg-white focus:ring-0 px-3 py-2 text-gray-700 placeholder-gray-400 shadow-sm transition duration-150 ease-in-out hover:border-accent hover:ring-1 hover:ring-accent"
          placeholder="https://ejemplo.com/imagen.jpg"
        />
      </div>
      <div class="flex justify-end space-x-2">
        <button
          type="button"
          id="closeModalButton"
          class="px-4 py-2 bg-red-700 text-white rounded-md font-medium hover:bg-gray-400 transition duration-150 ease-in-out"
          >Cancel</button
        >
        <button
          type="submit"
          class="px-4 py-2 bg-accent text-white rounded-md font-medium hover:bg-blue-600 transition duration-150 ease-in-out"
          >Add</button
        >
      </div>
    </form>
  </div>
</div>
